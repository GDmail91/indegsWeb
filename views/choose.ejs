<% include header.ejs %>
<div class="page-header"><h1><%= title %><small><%= card.title %></small></h1></div>
<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="text-center"><button class="btn btn-danger" onClick=chooseImage('<%=imageA._id%>')>Choice <span class="glyphicon glyphicon-heart-empty"></span></button></div>
        <img src="/<%= imageA.image_url %>/<%= imageA.image_name%>" class="img-responsive" alt="imageA" style="margin-top:15px">
        <hr>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="text-center"><button class="btn btn-danger" onClick=chooseImage('<%=imageB._id%>')>Choice <span class="glyphicon glyphicon-heart-empty"></span></button></div>
        <img src="/<%= imageB.image_url %>/<%= imageB.image_name%>" class="img-responsive" alt="imageB" style="margin-top:15px">
        <hr>
    </div>

</div>

<script type="text/javascript">
    function chooseImage(image) {
        location.href='<%= host %>/choose/<%= card._id%>/'+image;
    }
</script>

<% include footer.ejs %>